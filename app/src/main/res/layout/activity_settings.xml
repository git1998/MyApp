<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="ltd.akhbod.flychats.SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/setting_displayimage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/setting_displayname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_displayimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Display Name"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/setting_status_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_displayname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Hey there..I am using fly`chats "
        android:textSize="18sp" />

    <Button
        android:id="@+id/setting_profie_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/setting_sttaus_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:background="?attr/colorError"
        android:text="  Change profile   "
        android:textSize="18sp" />

    <Button
        android:id="@+id/setting_sttaus_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/setting_profie_btn"
        android:layout_marginBottom="33dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:text="   change status   "
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

</RelativeLayout>
