<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/massage_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp">




    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/massage_circleimage_layout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/massage_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/massage_circleimage_layout"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/massage_circleimage_layout"
        android:background="@drawable/massage_background"
        android:padding="10dp"
        android:text="TextView" />



</RelativeLayout>